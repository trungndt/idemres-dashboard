          %a.logo-sub{href:"/"}
            %img{src:"assets/images/sol.png"}
            %span 
              %strong Sofitel Singapore Resort
              Carrina Yang
    %section
      .container
        .heading
          %h2 Create New Block
          %a{href:"/"} Cancel and Go back
        .step-group
          %ul
            %li
              %a.btn{href:"#"} Enter Block Details
            %li
              %a.btn{href:"#"} Preview Details
            %li.active
              %a.btn{href:"#"} Preview Message
        %br
        .panel-body.bg-info.mb-30
          Block created! Public reservation link here:&nbsp;
          %a{href:"#"} http://reservations.site

        .row
          .col-sm-10.col-sm-offset-1
            %form.form-horizontal.mb-30
              .form-group
                %label.col-sm-2.control-label To:
                .col-sm-8
                  %input.form-control{placeholder:""}
              .form-group
                %label.col-sm-2.control-label CC:
                .col-sm-8
                  %input.form-control{placeholder:""}
              .form-group
                %label.col-sm-2.control-label Subject:
